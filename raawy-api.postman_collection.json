{
	"info": {
		"_postman_id": "raawy-backend-api",
		"name": "Raawy Backend API",
		"description": "API collection for the Raawy backend. Base URL: http://localhost:3000/api/v1",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{accessToken}}",
				"type": "string"
			}
		]
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:3000/api/v1"
		},
		{
			"key": "accessToken",
			"value": ""
		},
		{
			"key": "refreshToken",
			"value": ""
		},
		{
			"key": "categoryId",
			"value": "",
			"description": "Set from GET /categories response"
		}
	],
	"item": [
		{
			"name": "Health",
			"item": [
				{
					"name": "Get Hello",
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}",
							"host": ["{{baseUrl}}"]
						},
						"description": "Root health/hello endpoint (public)"
					}
				}
			]
		},
		{
			"name": "Auth",
			"item": [
				{
					"name": "Register Listener",
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"listener1\",\n  \"email\": \"listener@example.com\",\n  \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/auth/register/listener",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "register", "listener"]
						},
						"description": "Register a new listener. Username: 3-30 chars, alphanumeric + underscore. Password: min 8 chars."
					}
				},
				{
					"name": "Register Creator",
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "username",
									"value": "creator1",
									"type": "text"
								},
								{
									"key": "email",
									"value": "creator@example.com",
									"type": "text"
								},
								{
									"key": "password",
									"value": "password123",
									"type": "text"
								},
								{
									"key": "showName",
									"value": "My Awesome Show",
									"type": "text"
								},
								{
									"key": "categoryId",
									"value": "{{categoryId}}",
									"type": "text",
									"description": "Use category id from GET /categories"
								},
								{
									"key": "avatar",
									"type": "file",
									"src": [],
									"description": "Optional. Max 5MB"
								}
							]
						},
						"url": {
							"raw": "{{baseUrl}}/auth/register/creator",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "register", "creator"]
						},
						"description": "Register a new creator. Requires showName and categoryId. Avatar is optional (max 5MB)."
					}
				},
				{
					"name": "Verify Email",
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"token\": \"verification-token-from-email\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/auth/verify-email",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "verify-email"]
						},
						"description": "Verify email with token sent to user's email"
					}
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const json = pm.response.json();",
									"    if (json.accessToken) pm.collectionVariables.set('accessToken', json.accessToken);",
									"    if (json.refreshToken) pm.collectionVariables.set('refreshToken', json.refreshToken);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"listener@example.com\",\n  \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/auth/login",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "login"]
						},
						"description": "Login with email and password. Saves accessToken and refreshToken to collection variables."
					}
				},
				{
					"name": "Refresh Token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const json = pm.response.json();",
									"    if (json.accessToken) pm.collectionVariables.set('accessToken', json.accessToken);",
									"    if (json.refreshToken) pm.collectionVariables.set('refreshToken', json.refreshToken);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/auth/refresh",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "refresh"]
						},
						"description": "Refresh access token. Saves new tokens to collection variables."
					}
				},
				{
					"name": "Forgot Password",
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"user@example.com\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/auth/forgot-password",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "forgot-password"]
						},
						"description": "Request password reset email. Returns 202 Accepted."
					}
				},
				{
					"name": "Reset Password",
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"token\": \"reset-token-from-email\",\n  \"newPassword\": \"newpassword123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/auth/reset-password",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "reset-password"]
						},
						"description": "Reset password with token from forgot-password email. New password min 8 chars."
					}
				},
				{
					"name": "Google OAuth",
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/auth/google",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "google"]
						},
						"description": "Initiates Google OAuth. Use in browser - redirects to Google, then to /auth/google/callback."
					}
				}
			]
		},
		{
			"name": "Users",
			"item": [
				{
					"name": "Get Profile (Me)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/users/me",
							"host": ["{{baseUrl}}"],
							"path": ["users", "me"]
						},
						"description": "Get current user profile. Requires JWT (Bearer token). Email must be verified."
					}
				},
				{
					"name": "Update Profile",
					"request": {
						"method": "PATCH",
						"header": [],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "bio",
									"value": "My bio",
									"type": "text"
								},
								{
									"key": "website",
									"value": "https://example.com",
									"type": "text"
								},
								{
									"key": "twitter",
									"value": "@handle",
									"type": "text"
								},
								{
									"key": "instagram",
									"value": "@handle",
									"type": "text"
								},
								{
									"key": "showName",
									"value": "Show Name",
									"type": "text",
									"description": "Creators only"
								},
								{
									"key": "categoryId",
									"value": "",
									"type": "text",
									"description": "Creators only"
								},
								{
									"key": "avatar",
									"type": "file",
									"src": [],
									"description": "Optional. Max 5MB"
								}
							]
						},
						"url": {
							"raw": "{{baseUrl}}/users/me",
							"host": ["{{baseUrl}}"],
							"path": ["users", "me"]
						},
						"description": "Update current user profile. All fields optional. Avatar max 5MB."
					}
				},
				{
					"name": "Upgrade to Creator",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "showName",
									"value": "My New Show",
									"type": "text"
								},
								{
									"key": "categoryId",
									"value": "{{categoryId}}",
									"type": "text",
									"description": "Use category id from GET /categories"
								},
								{
									"key": "avatar",
									"type": "file",
									"src": [],
									"description": "Optional. Max 5MB"
								}
							]
						},
						"url": {
							"raw": "{{baseUrl}}/users/me/upgrade-creator",
							"host": ["{{baseUrl}}"],
							"path": ["users", "me", "upgrade-creator"]
						},
						"description": "Upgrade listener to creator. Requires JWT. Listeners only."
					}
				}
			]
		},
		{
			"name": "Categories",
			"item": [
				{
					"name": "List Categories",
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/categories",
							"host": ["{{baseUrl}}"],
							"path": ["categories"]
						},
						"description": "List all categories. Public endpoint. Use category IDs for creator registration and upgrade."
					}
				}
			]
		}
	]
}
