# MongoDB
MONGODB_URI=mongodb://localhost:27017/raawy

# Redis (Bull queues). Required for async email. Leave empty to skip.
REDIS_URL=redis://localhost:6379

# SMTP - Required for sending verification & password reset emails
# Gmail: Enable 2FA, then create App Password at https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-gmail@gmail.com
SMTP_PASS=xxxx-xxxx-xxxx-xxxx
EMAIL_FROM=your-gmail@gmail.com

# Frontend base URL for email links (e.g. rawy:// for app deep link)
FRONTEND_BASE_URL=http://localhost:8081

# JWT
JWT_SECRET=change-me-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
